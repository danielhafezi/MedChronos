// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  id               String   @id @default(uuid())
  name             String
  age              Int
  sex              String   // 'M', 'F', 'Other'
  mrn              String?
  reasonForImaging String?  @map("reason_for_imaging")
  createdAt        DateTime @default(now()) @map("created_at")
  
  studies          Study[]
  reports          Report[]
  chats            Chat[]
  
  @@map("patients")
}

model Study {
  id               String   @id @default(uuid())
  patientId        String   @map("patient_id")
  title            String
  modality         String?
  imagingDatetime  DateTime @map("imaging_datetime")
  seriesSummary    String   @map("series_summary")
  includeCodes     Boolean  @default(false) @map("include_codes")
  geminiJson       Json?    @map("gemini_json")
  createdAt        DateTime @default(now()) @map("created_at")
  
  patient          Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
  images           Image[]
  
  @@map("studies")
}

model Image {
  id               String   @id @default(uuid())
  studyId          String   @map("study_id")
  gcsUrl           String   @map("gcs_url")
  sliceIndex       Int      @map("slice_index")
  sliceCaption     String   @map("slice_caption")
  enhancedCaption  String?  @map("enhanced_caption")
  createdAt        DateTime @default(now()) @map("created_at")
  
  study            Study    @relation(fields: [studyId], references: [id], onDelete: Cascade)
  
  @@map("images")
}

model Report {
  id          String   @id @default(uuid())
  patientId   String   @map("patient_id")
  geminiJson  Json     @map("gemini_json")
  createdAt   DateTime @default(now()) @map("created_at")
  
  patient     Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
  
  @@map("reports")
}

model Chat {
  id          String   @id @default(uuid())
  patientId   String   @map("patient_id")
  title       String   @default("New Chat")
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  patient     Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
  messages    ChatMessage[]
  
  @@map("chats")
}

model ChatMessage {
  id          String   @id @default(uuid())
  chatId      String   @map("chat_id")
  role        String   // 'user' or 'assistant'
  content     String   @db.Text
  createdAt   DateTime @default(now()) @map("created_at")
  
  chat        Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
  
  @@map("chat_messages")
}
